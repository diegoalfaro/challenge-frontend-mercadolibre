{
  "resolve": {
    "extensions": [".js", ".jsx", ".ts", ".tsx"]
  },
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "ES6",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@pages/*": ["./pages/*"],
      "@components/*": ["./components/*"],
      "@layouts/*": ["./layouts/*"],
      "@hooks/*": ["./hooks/*"],
      "@helpers/*": ["./helpers/*"],
      "@theme": ["./theme"],
      "@theme/*": ["./theme/*"],
      "@services/*": ["./services/*"],
      "@i18n": ["./i18n"],
      "@i18n/*": ["./i18n/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist", "webpack"]
}
