{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/packages/backend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "program": "src/index.ts",
      "restart": true,
      "stopOnEntry": false,
      "sourceMaps": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    }
  ]
}
